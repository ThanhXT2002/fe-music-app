<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production API domain with extended timeout tolerance -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api-music.tranxuanthanhtxt.com</domain>
        <domain includeSubdomains="true">tranxuanthanhtxt.com</domain>
        <!-- Extended trust for SSL certificates -->
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- Development domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
    </domain-config>

    <!-- YouTube and media domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">youtube.com</domain>
        <domain includeSubdomains="true">youtu.be</domain>
        <domain includeSubdomains="true">googlevideo.com</domain>
        <domain includeSubdomains="true">ytimg.com</domain>
        <domain includeSubdomains="true">googleusercontent.com</domain>
    </domain-config>

    <!-- Global configuration with extended timeout tolerance -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
